@page "/admin/user"
@attribute [Authorize(Roles = "Admin")]
<h3>Users list</h3>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First name</th>
            <th>Last name</th>
            <th>>Edit</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var user in Users)
            {
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td><button class="btn btn-primary" href="/admin/user/@user.Id">Edit</button></td>
            }
        </tr>
    </tbody>
</table>
