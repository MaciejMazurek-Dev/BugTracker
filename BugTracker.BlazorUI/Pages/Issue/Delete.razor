@page "/issue/delete/{id:int}"
@attribute [Authorize(Roles = "Admin")]
<h3>Delete</h3>

<h2>Are you sure that you want to delete: </h2>

<p>Id: @IssueModel.Id</p>
<p>Summary: @IssueModel.Summary</p>
<p>Description: @IssueModel.Description</p>
<p>Reporter: @IssueModel.ReporterId</p>
<p>Priority: @IssueModel.IssuePriority.Name</p>
<p>Type: @IssueModel.IssueType.Name</p>
<p>Status: @IssueModel.IssueStatus.Name</p>
<p>Assignee: @IssueModel.AssigneeId</p>

<button class="btn btn-danger" @onclick="DeleteIssue">Yes</button>

<button class="btn btn-primary" href="/issue/">No</button>